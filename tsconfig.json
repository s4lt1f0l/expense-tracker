{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "esnext",
    "target": "esnext",
    "types": [],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "strict": true,                      // Bật toàn bộ kiểm tra nghiêm ngặt
    "noUncheckedIndexedAccess": true,    // Ngăn truy cập mảng có thể undefined
    "exactOptionalPropertyTypes": true,  // Phân biệt rõ optional property
    "noImplicitAny": true,               // Ngăn biến không có type mặc định là any
    "noImplicitThis": true,              // Ngăn dùng 'this' khi chưa rõ kiểu
    "alwaysStrict": true,                // Tự động thêm 'use strict' vào file JS

    // Style / Code Hygiene Options
    "noImplicitReturns": true,           // Mọi nhánh trong hàm phải return
    "noImplicitOverride": true,          // Khi override phải ghi rõ từ khóa override
    "noUnusedLocals": true,              // Cảnh báo biến không dùng
    "noUnusedParameters": true,          // Cảnh báo tham số không dùng
    "noFallthroughCasesInSwitch": true,  // Ngăn fallthrough trong switch
    "noPropertyAccessFromIndexSignature": true, // Yêu cầu truy cập rõ ràng

    // Recommended Options
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
